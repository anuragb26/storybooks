<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/edit/{{id}}" class='btn-floating halfway-fab red'>
          <i class='fa fa-pencil'></i>
        </a>
      </div>
      <div class="card-content">
        <h5>{{title}}</h5>
        <p class='story'>{{stripTags (truncate body 150) }}</p>
        <br />
        <div class="chip">
          <img src="{{user.image}}" alt='contact-person' />
          {{user.firstName}} {{user.lastName}}
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/stories/show/{{id}}">
            Read More
          </a>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <p>No Stories Found</p>
  {{/each}}
</div>